    <script>
        function openTab(tabName) {
            // Hide all tab contents
            const contents = document.querySelectorAll('.tab-content');
            contents.forEach(content => {
                content.classList.add('hidden');
            });

            // Remove active class from all tabs
            const buttons = document.querySelectorAll('.tab-button');
            buttons.forEach(button => {
                button.classList.remove('text-blue-500', 'font-bold');
            });

            // Show the selected tab content and highlight the active button
            document.getElementById(tabName + '-content').classList.remove('hidden');
            document.getElementById(tabName + '-tab').classList.add('text-blue-500', 'font-bold');
        }

        // Default open Home tab
        openTab('home');
    </script>
